<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/ivBackground" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:scaleType="centerCrop"/>
    <TextView
            android:text="WindSpeed=120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvWind" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent" android:textSize="24sp"
            android:textColor="#000" android:textStyle="bold"/>
    <TextView
            android:text="Pressure=120"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPressure" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/tvWind"
            android:textSize="24sp" android:textStyle="bold" android:textColor="#000"/>
    <TextView
            android:text="CityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvCity" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/tvPressure"
            android:textSize="24sp" android:textStyle="bold" android:textColor="#000"/>
    <TextView
            android:text="20F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvTemp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:textStyle="bold" android:textColor="#000"
            android:textSize="50sp"/>
</android.support.constraint.ConstraintLayout>